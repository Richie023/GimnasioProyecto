                                        </a>

                                        <a href="@Url.Action("ConsultarEntrenadores", "Entrenador")" class="d-flex align-items-center gap-2 dropdown-item">
                                            <i class="ti ti-user fs-6"></i>
                                            <p class="mb-0 fs-3">Consultar Entrenadores</p>
                                        </a>

                                        <a href="@Url.Action("CrearClase", "Entrenador")" class="d-flex align-items-center gap-2 dropdown-item">
                                            <i class="ti ti-user fs-6"></i>
                                            <p class="mb-0 fs-3">Registrar Clases</p>
                                        </a>

                                        <a href="@Url.Action("ConsultarClases", "Entrenador")" class="d-flex align-items-center gap-2 dropdown-item">
                                            <i class="ti ti-user fs-6"></i>
                                            <p class="mb-0 fs-3">Consultar Clases</p>
                                        </a>

                                        <a href="@Url.Action("CerrarSesion", "Login")" class="btn btn-outline-primary mx-3 mt-2 d-block">
