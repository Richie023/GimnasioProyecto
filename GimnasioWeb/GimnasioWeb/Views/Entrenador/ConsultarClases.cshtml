@model List<GimnasioWeb.Models.Clase>

@{
    Layout = "~/Views/Shared/_Layout_EXterno.cshtml";
}

<div class="card shadow-sm border-light">
    <div class="card-body">
        <h5 class="card-title text-primary mb-4">Clases Activas</h5>

        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover text-nowrap align-middle mb-0">
                <thead class="thead-light">
                    <tr class="border-0">
                        <th># de Clase</th>
                        <th>Nombre de la clase</th>
                        <th>Descripción de la clase</th>
                        <th>Entrenador</th>
                        <th>Fecha de la clase</th>
                        <th>Duración</th>
                        <th>Capacidad máxima de estudiantes</th>
                    </tr>
                </thead>
                <tbody class="table-group-divider">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.IdClase</td>
                            <td>@item.Nombre</td>
                            <td>@item.Descripcion</td>
                            <td>@item.Entrenador</td>
                            <td>@item.FechaHora.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>@item.Duracion meses</td>
                            <td>@item.CapacidadMaxima personas</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Agregar CSS para personalización -->
<style>
    .card {
        border-radius: 10px;
        background-color: #f9f9f9;
    }

    .card-title {
        font-size: 1.25rem;
        font-weight: bold;
    }

    .table thead {
        background-color: #007bff;
        color: white;
    }

    .table tbody tr:hover {
        background-color: #f1f1f1;
    }

    .table td, .table th {
        padding: 12px;
        vertical-align: middle;
    }

    .table-striped tbody tr:nth-of-type(odd) {
        background-color: #f2f2f2;
    }

    .table-hover tbody tr:hover {
        background-color: #e8e8e8;
    }

    /* Border style and shadow for the card */
    .card-shadow {
        box-shadow: 0px 2px 8px rgba(0, 0, 0, 0.1);
    }
</style>
